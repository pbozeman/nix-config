#!/bin/sh -e

VERSION=1.0

GREEN='\033[1;32m'
RED='\033[1;31m'
CLEAR='\033[0m'

FLAKE=$(hostname -s)
SYSTEM="nixosConfigurations.$FLAKE.config.system.build.toplevel"

# Navigate to the directory of this script
cd $(dirname $(readlink -f $0))
cd ..

echo "${GREEN}Starting...${CLEAR}"
nix --experimental-features 'nix-command flakes' build .#$SYSTEM $@

echo "${GREEN}Switching to new generation...${CLEAR}"
sudo ./result/sw/bin/nixos-rebuild switch --flake .#$FLAKE $@

echo "${GREEN}Cleaning up...${CLEAR}"
#unlink ./result

echo "${GREEN}Done${CLEAR}"
